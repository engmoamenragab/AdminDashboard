@model ADB.BL.Models.DepartmentVM
@{
    ViewData["Title"] = "Delete";
}

<div class="block-header">
    <h2>Delete Department</h2>
</div>

<form asp-controller="Department" asp-action="Delete">
    <label asp-for="Id">Department Name</label>
    <input type="text" class="form-control" asp-for="Id" disabled />
    <br />

    <label asp-for="Name">Department Name</label>
    <input type="text" class="form-control" asp-for="Name" disabled />
    <br />

    <label asp-for="Code">Department Code</label>
    <input type="text" class="form-control" asp-for="Code" disabled />
    <br />

    <center>
        <a asp-controller="Department" asp-action="Index" class="btn btn-info">Back</a>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-controller="Department" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">Update</a>
        <a asp-controller="Department" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">Details</a>
    </center>
</form>